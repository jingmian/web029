@using System.Data
@model ZoomLaCMS.Areas.User.Models.OrderViewModel
@{
    DataTable dt = new DataTable();
    
}
@section head{<title>我的订单</title>

}
@section content{
    <div id="pageflag" data-nav="shop" data-ban="shop"></div>
    <div class="container margin_t5 hidden">
        <ol class="breadcrumb" style="margin-bottom:5px;">
            <li><a title="会员中心" href="@Url.Action("Default","")">会员中心</a></li>
            <li class="active"><a href="OrderList">我的订单</a></li>
        </ol>
        @Html.Partial("OrderTop")
    </div>
    <div class="container orderlist margin_t5 hidden">
        <div class="order_navs">
            <ul class="nav nav-tabs" id="OrderType_ul" role="tablist">
                <li role="presentation" data-flag="all"><a href="?filter=&ordertype=@Model.OrderType">全部订单</a></li>
                <li role="presentation" data-flag="paid"><a href="?filter=paid&ordertype=@Model.OrderType">已付款</a></li>
            </ul>
            <div class="input-group search_div text_300">
                <input type="text" id="Skey_T" name="Skey_T" placeholder="商品名称/商品编号/订单号" class="form-control mvcparam" />
                <span class="input-group-btn">
                    <button type="button" class="btn btn-default" id="Search_Btn" ><i class="fa fa-search"></i></button>
                </span>
            </div>
        </div>
         @Html.Partial("OrderList_List",Model)
    </div>
    
<div class="weui-cells__title">借还记录</div>

@MvcHtmlString.Create(Call.GetLabel("{ZL.Label id=\"输出当前用户借还记录\" ShowNum=\"20\" /}"))

<style>
body { background:#F8F8F8;}
.weui-media-box__title { margin-top:0;}
.weui-media-box__desc { margin-bottom:0;}
label { font-weight:500; margin-bottom:0;}
.order-item { font-family:"STHeiti","Microsoft YaHei","黑体","arial";}
.order-item { background:#fff; margin-top:5px;}
.gray9{color:#999;}
.tips_div { padding-top:10px; padding-bottom:10px; padding-left:15px; padding-right:15px; border-top:1px solid #e3e5e9; border-bottom:1px solid #e3e5e9; position:relative;}
.prolist { padding:5px 10px;}
.prolist .media p { margin-bottom:0; font-size:0.9em;}
.prolist .media p span { margin-right:5px;}

</style>
}
@section script{
    @Html.Partial("OrderList_Res")
<script>
$("#foot_user").addClass("weui-bar__item_on");
</script>
}